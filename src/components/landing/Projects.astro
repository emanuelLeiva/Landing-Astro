---
import projects from "../../config/projects.json";
---

<h2 class="font-bold text-center text-5xl my-5">Projects</h2>
<div>
  {
    projects.map((Project) => (
      <div class="flex md:flex-row flex-col text-center md:text-left">
        <div class="flex-1 p-4">
          <h2 class="font-bold text-2xl my-4">{Project.title}</h2>
          <p class="">{Project.description}</p>
          <button class="bg-blue-800 my-4 px-3 py-2 hover:bg-blue-700 rounded">
            More info
          </button>
        </div>
        <di class="flex-1">
          <img src={Project.image} alt="image" class="w-72 m-auto" />
        </di>
      </div>
    ))
  }
</div>
